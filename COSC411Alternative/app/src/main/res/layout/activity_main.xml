<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/encrypt_text"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="encrypt:" />
    <TextView
        android:id="@+id/decrypt_text"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="decrypt:"
        android:layout_below="@+id/encrypt_text"/>
    <TextView
        android:id="@+id/textview_encrypt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/encrypt_text"
        android:text="" />
    <TextView
        android:id="@+id/textview_decrypt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_toRightOf="@+id/decrypt_text"
        android:layout_below="@+id/encrypt_text"/>


    <EditText
        android:id="@+id/edit_one"
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/textview_decrypt"
        android:hint="type"/>
    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="encrypt"
        android:layout_below="@id/edit_one"
        android:onClick="encrypt"/>
    <Button
        android:id="@+id/button_decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decrypt"
        android:layout_below="@id/button_second"
        android:onClick="decrypt"/>

</RelativeLayout>